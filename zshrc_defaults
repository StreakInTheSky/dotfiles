# Lines configured by zsh-newuser-install
HISTFILE=~/.histfile
HISTSIZE=10000
SAVEHIST=10000
setopt appendhistory
bindkey -e
# End of lines configured by zsh-newuser-install

if type brew &>/dev/null; then
  FPATH=$(brew --prefix)/share/zsh/site-functions:$FPATH
fi

fpath+=~/.zfunc

# The following lines were added by compinstall
zstyle ':completion:*' completer _expand _complete _ignored _approximate
zstyle :compinstall filename '~/.zshrc'

autoload -Uz compinit
compinit -C
# End of lines added by compinstall

export NVM_LAZY_LOAD=true

#gets plugins bundled by antibody
source ~/.zsh_plugins.sh

# setup fzf
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# setup pyenv
eval "$(pyenv init -)"

export PATH="$HOME/.poetry/bin:$PATH"

eval "$(starship init zsh)"
eval "$(zoxide init zsh)"

export DOTFILES=~/.dotfiles
# sets terminal theme to system theme mode
theme=$([ $(defaults read -globalDomain AppleInterfaceStyle 2>/dev/null) ] || echo 'light')
source $DOTFILES/switch_theme $theme

#aliases
alias ls='lsd'
alias vi='nvim'
alias theme='source $DOTFILES/switch_theme'
